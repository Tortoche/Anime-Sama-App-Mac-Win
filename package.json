{
  "name": "anime-sama-ultra-pc",
  "version": "1.0.0",
  "description": "Le client PC ultime pour Anime-Sama",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "Tortoche",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Tortoche/Anime-Sama-App-Mac-Win.git"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.animesama.pc",
    "productName": "Anime Sama Ultra",
    "directories": {
      "buildResources": "build"
    },
    "mac": {
      "category": "public.app-category.entertainment",
      "target": "dmg",
      "icon": "build/icon.icns",
      "identity": null
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  }
}
